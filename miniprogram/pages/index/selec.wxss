/* pages/index/selec.wxss */

.divide{
  position: relative;
  background-color: #fff;
  width: 11px;
  left: 40px;
  margin-top: 0px;
  height: 200rpx;
}
.hotNewsCell-container {
  flex-direction: column;
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  width: 100%;
  height: 220rpx;
  background-color: #fff;
  border-bottom: 3px solid #2b838f;
}

.hotNewsCell-topView {
  flex-direction: row;
  display: flex;
  margin-top: 15rpx;
  margin-left: 13rpx;
  margin-bottom: 0rpx;
  width: 97%;
  height: 180rpx;
  background-color: rgb(200, 214, 75);
}

.hotNewsCell-topView-left-image {
  margin-top: 10rpx;
  margin-left: 18px;
  width: 140rpx;/*145*/
  height: 136rpx;
  border-radius: 4px;
  
}
.hotNewsCell-topView-right-image {
  margin-top: 10rpx;
  margin-left: 60px;
  width: 140rpx;/*145*/
  height: 136rpx;
  border-radius: 4px;
}

.hotNewsCell-topView-left-image:hover{
  margin-top: 2rpx;
  margin-left: 10px;
  width: 130rpx;/*145*/
  height: 126rpx;
  border-radius: 4px;
  
}
.hotNewsCell-topView-right-image:hover {
  margin-top: 2rpx;
  margin-left: 50px;
  width: 130rpx;/*145*/
  height: 126rpx;
  border-radius: 4px;
}
.hotNewsCell-topView-right-content {
  flex-direction: column;
  display: flex;
  margin-top: 8rpx;
  margin-left: 8rpx;
  margin-right: 8rpx;
  height: 140rpx;
}

.hotNewsCell-title {
  margin-top: 8rpx;
  margin-left: 8rpx;
  font-size: 16px;
  /*font-weight: bold;*/
  height: 84rpx;
  width: 506rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  word-break: break-all;

  color: #1d1d1d;
}

.hotNewsCell-Subtitle {
  margin-top: 8rpx;
  margin-left: 8rpx;
  font-size: 15px;
  height: 42rpx;
  width: 506rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  color: #88888d;
}

.hotNewsCell-bottomView {
  flex-direction: row;
  display: flex;
  width: 100%;
  height: 24rpx;
  margin-bottom: 8rpx;
}
.hotNewsList-container {
  flex-direction: column;
  display: flex;

}

.gridIconCell-container {
    flex-direction: column;
    display: flex;
    width: 100%;
    height: 100%;
    align-items: center;
}

.icon {
    margin-top: 16rpx;
    width: 93.75rpx;
    height: 93.75rpx;
}

.iconTitle {
    margin-top: 12rpx;
    font-size: 13px;
    line-height: 21rpx;
}



.author {
  width: 400rpx;
  height: 26rpx;
  margin-top: 0px;
  margin-left: 8px;
  text-align: left;
  font-size: 13px;
  color: #9b9b9b;
}

.lastUpdateTime {
  width: 342rpx;
  height: 26rpx;
  margin-top: 0px;
  margin-right: 8rpx;
  text-align: right;
  font-size: 13px;
  color: #9b9b9b;
}
